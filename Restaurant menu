    img: "C:/Users/HP/Codesoft/Task 3/images/2.jpeg",
    category: "Lunch"
  },
  {
    name: "Egg & Bread",
    time: "10 min",
    rating: 4.2,
    price: "25",
    img: "C:/Users/HP/Codesoft/Task 3/images/3.jpeg",
    category: "Breakfast"
  },
  {
    name: "Sweet Pancakes",
    time: "15 min",
    rating: 4.5,
    price: "13",
    img: "C:/Users/HP/Codesoft/Task 3/images/4.jpeg",
    category: "Dessert"
  }
];


const menuContainer = document.getElementById("menu-container");
const itemDetail = document.getElementById("item-detail");

menuItems.forEach((item) => {
  const card = document.createElement("div");
  card.className = "menu-card";
  card.innerHTML = `
    <img src="${item.img}" alt="${item.name}" onerror="this.onerror=null;this.src='https://via.placeholder.com/300x200?text=No+Image'" />
    <div class="menu-info">
      <h3>${item.name}</h3>
      <p>${item.time} min â€¢ â­ ${item.rating}</p>
      <strong>$${item.price}</strong>
    </div>
  `;
  card.onclick = () => showDetail(item);
  menuContainer.appendChild(card);
});

function showDetail(item) {
  itemDetail.classList.remove("hidden");
  itemDetail.innerHTML = `
    <img src="${item.img}" alt="${item.name}" onerror="this.onerror=null;this.src='https://via.placeholder.com/300x200?text=No+Image'" />
    <h2>${item.name}</h2>
    <p>${item.description}</p>
    <p>${item.time} min â€¢ â­ ${item.rating}</p>
    <h3>$${item.price}</h3>
    <button onclick="hideDetail()">â† Back to Menu</button>
  `;
}

function hideDetail() {
  itemDetail.classList.add("hidden");
}

